<p id="notice"><%= notice %></p>

<h1>Lodges</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Tel</th>
      <th>Url</th>
      <th>Description</th>
      <th>Available</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lodges.each do |lodge| %>
      <tr>
        <td><%= lodge.name %></td>
        <td><%= lodge.address %></td>
        <td><%= lodge.tel %></td>
        <td><%= lodge.url %></td>
        <td><%= lodge.description %></td>
        <td><%= lodge.available %></td>
        <td><%= lodge.picture %></td>
        <td><%= link_to 'Show', lodge %></td>
        <td><%= link_to 'Edit', edit_lodge_path(lodge) %></td>
        <td><%= link_to 'Destroy', lodge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

